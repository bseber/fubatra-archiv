<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.wrapper {
			width: 100%;
			height: 100%;
		}
		
		.menu {
			padding: 0.5em;
			background-color: black;
			border-bottom: 1px solid #535353;
		}
		
		.content {
			padding: 2em;
			min-width: 950px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="EM" styleName="{style.wrapper}">
		<g:north size="3.5">
			<g:SimplePanel ui:field="menuContainer" styleName="{style.menu}" />
		</g:north>
		<g:center>
			<g:ScrollPanel ui:field="centerContainer" styleName="{style.content}" />
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 